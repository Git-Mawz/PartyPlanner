{% extends 'base.html.twig' %}

{% block title %}Hello PlannerController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Welcome to Lineage II Party Planner! âœ…</h1>
    <p>This tool is dedicated to plan LII Reborn Parties</p>
</div>


{% if parties|length > 0 %}
    <ul id="parties">
        {% for party in parties %}
            <li class="party">
                <div>
                    <h3>{{ party.name }}</h3>
                    <p>{{ party.leader }}</p>
                    {% if parties|length > 0 %}
                        <ul>
                            {% for member in party.members %}
                                <li>
                                    {{ member.name }}
                                    {{ member.job }}
                                    {{ member.level }}
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p>This party have no member yet</p>
                    {% endif %}
                </div>
            </li>
        {% endfor %}
    </ul>
{% else %}
    <p>There is not coming party registered</p>
{% endif %}

{% endblock %}
